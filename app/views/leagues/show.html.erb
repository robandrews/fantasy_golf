<div class="container">
  <div class="row">
    <h1 class="col-md-6"><%=@league.name%></h1>

    <h3>
      <%=render "layouts/mod"%>
    </h3>
  </div>
  
  <div class="slider pull-right">
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
        <span class="sr-only">60% Complete</span>
      </div>
    </div>
  </div>
  <div class="row league_standings">
    <%@divisions.each do |division|%>
    <h3><%=division.name%></h3>
    <table class="table table-condensed">
      
      <thead>
        <tr>
          <th>Position</th>
          <th>Name</th>
          <th>Season Points</th>
        </tr>
      </thead>
      <%division.members.each_with_index do |member, index|%>
      <tr>
        <td><%=index+1%>
          <td><%=member.name%></td>
          <td><%=member.season_points%></td>
        </tr>
        <%end%>
    
      </table>
    
      <%end%>
    </div>
  </div>