      <div class=row>
        <div class="roster-selection">
          <div class="col-md-5 col-offset-1">
            <ul class="list-group">
              <div class="column active">
                <%@active_players.each do |roster_membership, player|%>
                <div class="portlet" data-id="<%=roster_membership.id%>">
                  <li class="list-group-item">
                    <div class="portlet-header">
                      <img src="<%=player.picture_url%>" width=40>
                      <a href="<%=player.url%>" data-id="<%=player.id%>"><%=player.name%></a>
                      <button class="btn btn-sm btn-danger drop-player-button pull-right">Drop</button>
                    </div>
                  </li>
                </div>
                <%end%> 
              </div>
            </ul>
          </div>
      
          <div class="col-md-5">
            <ul class="list-group">
              <div class="column bench">
                <%@bench_players.each do |roster_membership, player|%>
                <div class="portlet" data-id="<%=roster_membership.id%>">
                  <li class="list-group-item">
                    <div class="portlet-header">
                      <img src="<%=player.picture_url%>" width=40>
                      <a href="<%=player.url%>"><%=player.name%></a>
                      <button class="btn btn-sm btn-danger drop-player-button pull-right">Drop</button>
                    </div>
                  </li>
                </div>
                <%end%>
              </div>
            </ul>
          </div>
        </div>
    
        <div class="col-md-4 col-md-offset-4">
          <button type="button" class="btn btn-lg" id="submit-roster">Submit Roster</button>
        </div>
      </div>