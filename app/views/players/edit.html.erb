<div class="container">
  <div class="row">
    <h2 class="col-md-6"><%=@player.name%></h2>
  </div>
        
  <div class="document">
 <%= form_for @player, url: player_path(@player), html: {method: "patch", role: "form" } do |f| %>
 
    <div class="form-group"><%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: "form-contol" %></div>
     
    <div class="form-group"><%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form-contol" %></div>
    
    <div class="form-group"><%= f.label :url %><br />
    <%= f.text_field :url, class: "form-contol" %></div>
    
    <div class="form-group"><%= f.label :twitter %><br />
    <%= f.text_field :twitter, class: "form-contol" %></div>
    
    <%= f.submit "Update" %>
    
    <% end %>
  </div>
</div>
