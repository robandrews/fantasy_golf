<div class="container">
  <h1>Players List</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Birthday</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Career Earnings</th>
        <th>Twitter</th>
      </tr>
    </thead>
    <tbody>
      <%@players.each do |player|%>
        <a href=<%=player.url%>>
          <div class=player>
            <tr>
              <td><img src=<%=player.picture_url%> width=40> </td>
              <td><%=link_to player.name, player.url%></td>
              <td><%=player.birthdate%></td>
              <td><%=player.string_height%></td>
              <td><%=player.weight%></td>
              <td><%="$#{number_with_delimiter(player.career_earnings, :delimiter => ",")}"%>
              <td><%=link_to player.twitter, "http://www.twitter.com/#{player.twitter}" %></td>
              <td><%= link_to "Edit", edit_player_url(player) %></td>
              <td><%= link_to "Delete", player, :method => :delete, data: { confirm: "Are you sure?" } %>
            </tr>
          </div>
        </a>
      <%end%>
    </tbody>
  </table>

  <%= paginate @players, :outer_window => 3, :theme => 'twitter-bootstrap-3' %>

</div>
